<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/fragment_result.xml -->
<!-- Deze xml-file bevat de layout en het ontwerp voor het resultaat-fragment -->

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- LinearLayout plaatst de elementen verticaal onder elkaar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Titel voor het resultaat -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textStyle="bold"
            android:paddingBottom="16dp"
            android:text="Je resultaat:"
            android:textColor="@android:color/black"
            android:gravity="center"/>

        <!-- Layout voor de methode met de hoogste score -->
        <LinearLayout
            android:id="@+id/topMethodLayout"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:orientation="horizontal"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/border">

            <!-- Afbeelding van de topmethode -->
            <ImageView
                android:id="@+id/ivTopMethodImage"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginEnd="8dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"/>

            <!-- Naam van de topmethode -->
            <TextView
                android:id="@+id/tvTopMethodName"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:textColor="@android:color/black"/>
        </LinearLayout>

        <!-- Layout voor de methode met de op één na hoogste score -->
        <LinearLayout
            android:id="@+id/secondMethodLayout"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:orientation="horizontal"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/border">

            <!-- Afbeelding van de tweede methode -->
            <ImageView
                android:id="@+id/ivSecondMethodImage"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginEnd="8dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"/>

            <!-- Naam van de tweede methode -->
            <TextView
                android:id="@+id/tvSecondMethodName"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:textColor="@android:color/black"/>
        </LinearLayout>

        <!-- Layout voor de methode met de derde hoogste score -->
        <LinearLayout
            android:id="@+id/thirdMethodLayout"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:orientation="horizontal"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/border">

            <!-- Afbeelding van de derde methode -->
            <ImageView
                android:id="@+id/ivThirdMethodImage"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginEnd="8dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"/>

            <!-- Naam van de derde methode -->
            <TextView
                android:id="@+id/tvThirdMethodName"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:textColor="@android:color/black"/>
        </LinearLayout>

        <!-- Titel voor de lager scorende methoden -->
        <TextView
            android:id="@+id/tvLowerScoredMethodsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingTop="16dp"
            android:paddingBottom="8dp"
            android:text="Lager scorende participatiewerkvormen:"
            android:gravity="center"
            android:textColor="@android:color/black"/>

        <!-- Layout voor de lager scorende methoden -->
        <LinearLayout
            android:id="@+id/lowerScoredMethodsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/border">
        </LinearLayout>

        <!-- Knop om opnieuw te starten -->
        <Button
            android:id="@+id/btnRestart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/opnieuw"
            android:layout_marginTop="16dp"
            android:fontFamily="sans-serif"/>

        <!-- Knop om terug te keren naar het hoofdmenu -->
        <Button
            android:id="@+id/btnMainMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hoofdmenu"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif"/>

    </LinearLayout>
</ScrollView>
