<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Deze xml-bestand bevat het standaardthema van de applicatie -->

    <!-- Standaard thema voor de applicatie, afgeleid van het MaterialComponents thema -->
    <style name="Theme.Gesallprov" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primaire merk kleur -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">#1A0187</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secundaire merk kleur -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Kleur van de statusbalk -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Pas het thema hier aan -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>

        <!-- Lettertype -->
        <item name="android:fontFamily">@font/philosopher_bold</item>
        <item name="fontFamily">@font/philosopher_bold</item>
    </style>
</resources>
